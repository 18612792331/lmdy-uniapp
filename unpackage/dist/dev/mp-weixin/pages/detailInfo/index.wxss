
.poster-bg {
	height: 100%;
	width: 100%;
	left: 0;
	top: 0;
	font-size: 0;
	position: fixed;
	z-index: -1;
}
.detail {
	height: 100%;
	width: 100%;
	min-height: 100%;
	background-color: rgba(30, 41, 61, 0.7);
	text-align: center;
	color: #FFFFFF;
}
.detail-container {
	padding-right: 15px;
	padding-left: 15px;
	margin-right: auto;
	margin-left: auto;
}
.pic {
	width: 60%;
	margin: 0 auto;
	overflow: hidden;
}
.nav {
	display: inline-block;
}
.choose {
	color: #007AFF;
}
.player_box {
	margin-top: 20px;
	width: 100%;
	text-align: center;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-align-content: flex-start;
	        align-content: flex-start;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row wrap;
	        flex-flow: row wrap;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
}
.box_child {
	-webkit-box-flex: 0;
	-webkit-flex: 0 0 20%;
	        flex: 0 0 20%;
	margin-bottom: 20px;
}

